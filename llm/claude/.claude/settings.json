{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(npm install*)",
      "Bash(npm test*)",
      "Bash(bun test*)",
      "Bash(npm run test*)",
      "Bash(bun run test*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(npm run build:*)",
      "Bash(npm run format:*)",
      "Bash(mkdir:*)",
      "Bash(rg:*)",
      "Bash(chainenv set:*)",
      "Bash(chainenv get:*)",
      "Bash(chainenv copy:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr create:*)",
      "Bash(just test:*)",
      "Bash(go doc:*)",
      "Bash(go get:*)",
      "Bash(go build:*)",
      "mcp__subagent__check_subagent_status",
